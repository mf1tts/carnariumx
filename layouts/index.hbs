<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}" />
    <link rel="me" href="mailto:mfitts@meat-space.net" />
    <style>
        { margin: 0; padding: 0; }

        html { 
            background: url('images/bg.png') no-repeat center center fixed; 
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
    </style>


</head>
<body>
    <h1>{{{ title }}}</h1>

    <div class="recent">
    {{#each stuff }}
      <article class="h-entry">
        <h2 class="p-name">{{ title }}</h2>
        <a class="p-author h-card" href="http://meat-space.net">not marion fitts</a>
        <time class="dt-published" datetime="{{ date }} 12:00:00">{{ date }}</time>
        <div class="e-content">
          {{{ contents }}}
        </div>
      </article>
    {{/each}}
    </div>
</body>
</html>